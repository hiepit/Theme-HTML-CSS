# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,conf}]
indent_style = space
indent_size = 4

[*.{xml,js,css}]
indent_style = space
indent_size = 2

[*.{yml,sql}]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2
